<link rel="stylesheet" href="/static/Styles/login.css">

<nav class="nav text-white">
    <h1 class="mx-auto">Sales Tracker</h1>
</nav>

<p style="text-align: center" class="text-danger"><%= errorMsg %></p>

<div style="text-align: center">
    <img id="mainLogo" src="/static/Assets/Logo.svg" alt="image not displayed">
</div>

<div id="loginForm" class="card">

    <div class="card-header">
        <h4 style="text-align: center">Sign In</h4>
    </div>

    <div class="card-body">
        <form class="form" action="/auth/login" method="POST">
            
            <div class="form-group">
                <label for="eAddress">Email Address:</label>
                <input id="eAddress" class="form-control" type="email" name="email">
            </div>

            
            <div class="form-group">
                <label for="pWord">Password:</label>
                <input id="pWord" class="form-control" type="password" name="pass">
            </div>

            <br/>

            <button style="margin-top: 10px" class="formBtn btn btn-primary float-right" type="submit">Login</button>

        </form>
    </div>

    <a href="/auth/register" class="mx-auto text-primary">New User? Create an Account.</a>
    
</div>
<br/>